---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Vinicius Antonio da Silva | Junior Developer.">
	<main class="mt-20 mb-10">
		<section class="flex items-center container mx-auto px-20">
			<div class="mr-20">
				<img src="/img/perfil.jpg" alt="" class="rounded-full w-60 h-60">
			</div>
			<div class="mr-10">
				<div class="">I'm,</div>	
				<h1 class="uppercase font-bold text-3xl">Vinicius Antonio da Silva</h1>	
				<h2 class="text-lg">Junior Developer, Game designer and Content Creator</h2>	
				<button class="bg-emerald-400 uppercase rounded-2xl px-1 py-2 w-48 mt-20 hover:bg-emerald-500 transition-all focus:ring focus:ring-emerald-300 active:bg-emerald-600">MEUS PROJETOS</button>
			</div>
			<div class="flex flex-col">
				<a href="">Linkedin</a>
				<a href="">Email</a>
				<a href="">Youtube</a>
			</div>
		</section>
		<section class="flex">
			<svg xmlns="http://www.w3.org/2000/svg" class="min-w-full" fill="none">
				<path class="fill-emerald-400 w-fit" fill="#34D399" fill-rule="evenodd" d="M0 0h60c60 0 180 0 300 5.148s240 15.445 360 30.889c120 15.444 240 36.037 360 51.482 120 15.444 240 25.74 300 30.888l60 5.149V206H0V0Z" clip-rule="evenodd"/>
			</svg>
		</section>
	</main>
</Layout>
